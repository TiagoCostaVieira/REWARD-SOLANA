{
  "license": "ISC",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test:unit": "anchor test --skip-local-validator",
    "test:integration": "anchor test --test integration_tests",
    "test:localnet": "anchor test --provider.cluster localnet",
    "test:devnet": "anchor test --provider.cluster devnet",
    "test:e2e": "mocha -r ts-node/register --project tests/tsconfig.json tests/e2e/**/*.test.ts",
    "test:stress": "ts-node tests/e2e/stress.test.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/web3.js": "^1.98.4"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.1",
    "chai": "^4.3.4",
    "mocha": "^9.2.2",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.1.0",
    "typescript": "^5.9.3"
  }
}
